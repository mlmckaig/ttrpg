{
	"$schema": "http://json-schema.org/draft-07/schema",
	"description": "Publication metadata",
	"properties": {
		"isbn": {
			"description": "ISBN",
			"type": "string"
		},
		"month": {
			"description": "Publication month",
			"maximum": 12,
			"minimum": 1,
			"type": "number"
		},
		"url": {
			"description": "URL for the publication",
			"type": "string"
		},
		"year": {
			"description": "Publication year",
			"minimum": 1800,
			"type": "number"
		}
	},
	"required": [
		"year"
	],
	"type": "object"
}
